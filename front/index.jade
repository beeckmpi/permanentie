doctype html
html(ng-app="permanentie")
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    base(href='/')
    title= appName

    for cssFile in cssFiles
      link(rel="stylesheet", href=cssFile)

    // Preloaded Data
    script.
      var preloadedData = !{data};
    for jsFile in jsFiles
      script(src=jsFile)
  body
    nav.navbar.navbar-inverse.navbar-static-top
      div.container-fluid
        div.navbar-header(style="padding-top:5px")
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse" data-target="#bs-example-navbar-collapse-1")
            span.sr-only Toggle navigation
          a.navbar-brand(href="#") Permanentiefiches
        div.collapse.navbar-collapse#bs-example-navbar-collapse-1
          ul.navbar-right.navbar-nav.nav
            li(style="padding-top:15px")
              button(type="button", ng-click="go('/permanenties/add')").btn.btn-danger Nieuwe Fiche
            li.dropdown
              a.dropdown-toggle(href="#", data-toggle="dropdown", role="button", aria-expanded="false")
                img#user-img(src="{{user.image.url}}")
                span.caret
              ul.dropdown-menu(role="menu")
                li
                  a(href='#') Instellingen
                li
                  a(href="#") Afmelden
    div.container-fluid
      div.row
        div.col-md-2.holder
          button.btn.btn-danger(style="width") Nieuwe Fiche
          ul.nav.nav-pills.nav-stacked
            li(role="presentation")
              a(hre="#") Mijn fiches
            li(role="presentation")
              a(hre="#") Ontvangen Fiches
            li(role="presentation")
              a(hre="#") Alle fiches
            li(role="presentation")
              a(hre="#") Mijn fiches
        div.col-md-10(ng-view)
    script(src="https://apis.google.com/js/client:platform.js", async, defer)
    script(src="https://plus.google.com/js/client:plusone.js") 
    if preloadHTML
      script(type="text/ng-template", id="#{preloadHTMLPath}")
        != preloadHTML
